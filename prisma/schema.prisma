// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  image       String
  address     String
  owner       String
  phoneNumber String
  opensAt     Int
  closesAt    Int
  rating      Float
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  brand            String
  shortDescription String
  description      String
  images           String[]
  price            Int
  discount         Int
  rating           Int
  stock            Int
  store            Store    @relation(fields: [storeId], references: [id])
  storeId          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
